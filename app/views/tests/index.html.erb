<p id="notice"><%= notice %></p>

<h1>Listing Tests</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Question</th>
      <th>Alternative1</th>
      <th>Alternative2</th>
      <th>Alternative3</th>
      <th>Alternative4</th>
      <th>Answer</th>
      <th>Time</th>
      <th>Test set id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.description %></td>
        <td><%= test.question %></td>
        <td><%= test.alternative1 %></td>
        <td><%= test.alternative2 %></td>
        <td><%= test.alternative3 %></td>
        <td><%= test.alternative4 %></td>
        <td><%= test.answer %></td>
        <td><%= test.time.hour %>:<%= test.time.min %>:<%= test.time.sec %></td>
        <% if test.test_set.nil? %>
          nil
        <% else %>
        <td><%= test.test_set.id %></td>
        <% end %>
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

